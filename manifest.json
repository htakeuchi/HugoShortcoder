{
  "manifest_version": 3,
  "name": "HugoShortcoder",
  "version": "1.0",
  "description": "Generate Hugo shortcodes from URLs and copy them to clipboard.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "scripting",
    "tabs"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Generate Hugo Shortcode",
    "default_icon": "icons/icon48.png"
  }
}